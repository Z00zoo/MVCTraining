@model IEnumerable<MVCTraining.ViewModels.TrackSpendingViewModel2>

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>

            @{
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(i)</td>
                        <td>@(item.Categoryyy == 1 ? "支出" : "收入")</td>
                        <td>@(item.Dateee.ToString("yyyy-MM-dd"))</td>
                        <td>@(String.Format("{0:#,0}", item.Amounttt))</td>
                    </tr>
                    i++;
                }
            }

        </table>
    </div>
</div>
