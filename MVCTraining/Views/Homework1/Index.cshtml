@model MVCTraining.ViewModels.TrackSpendingViewModel

@{
    ViewBag.Title = "我的記賬本";
}

<div class="well">
    <form class="form-horizontal" action="/Homework1/Index" method="post">
        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                <select id="category" name="category" class="form-control">
                    <option value="" selected>請選擇</option>
                    <option value="1">支出</option>
                    <option value="2">收入</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="money" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="money" name="trackSpending.money" placeholder="金額">
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="date" name="trackSpending.date" placeholder="日期">
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="description" name="trackSpending.description">
                </textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button id="btn" type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    </form>
</div>

@Html.Partial("ForIndexListPartial")

@section scripts{
    <script type="text/javascript">
        $("#btn").on("click", function () {
            event.preventDefault();
            $("<input/>").attr("type", "hidden")
                .attr("name", "listJson")
                .attr("value", '@Html.Raw(Model.ListJSON)')
                .appendTo("form");
           $("form").submit();
        });
    </script>    
}
